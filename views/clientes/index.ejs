<%- include('../partials/head') %>

<%- include('../partials/sidebar')%>

<%- include('../partials/topbar') %>

<div class="container-fluid">

    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Clientes</h1>
        <a href="/clientes/create" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"><i class="fa fa-plus-square mr-2"></i>Novo Cliente</a>
    </div>

    <% if(message && message.type && message.text) {%>
        <div class="alert alert-<%= message.type %> alert-dismissible fade show" role="alert">
            <%= message.text %>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    <% }%>

    <div class="container-fluid">

        <table class="table">
            <thead>
            <tr>
                <th>#</th>
                <th>Nome</th>
                <th>Email</th>
                <th>Pais</th>
                <th>Cidade</th>
                <th>Morada</th>
                <th>Telefone</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            <% if(clientes) { %>
                <% clientes.forEach(function (cliente, index) { %>

                    <tr>
                        <th scope="row"><%= index + 1 %></th>
                        <td><%= cliente.nome_cliente %></td>
                        <td><%= cliente.email_cliente %></td>
                        <td><%= cliente.pais_cliente %></td>
                        <td><%= cliente.cidade_cliente %> â‚¬</td>
                        <td><%= cliente.morada_cliente %></td>
                        <td><%= cliente.telefone_cliente %></td>
                        <td>
                            <div class="btn-group" role="group" aria-label="Basic example">
                                <a href="/clientes/edit/<%= cliente.id_cliente %>" type="button" class="btn btn-primary">
                                    <i class="fa fa-edit"></i>
                                </a>
                                <form method="POST" action="/clientes/delete/<%= cliente.id_cliente %>">
                                    <button type="button" onclick="confirm('Certeza que deseja remover o cliente?') ? this.parentElement.submit() : false"
                                            style="border-top-left-radius: 0;border-bottom-left-radius: 0;"
                                            class="btn btn-danger"><i class="fa fa-trash"></i></button>
                                </form>
                            </div>
                        </td>
                    </tr>

                <% }) %>
            <% } %>
            </tbody>
        </table>

    </div>

</div>

<%- include('../partials/footer') %>
